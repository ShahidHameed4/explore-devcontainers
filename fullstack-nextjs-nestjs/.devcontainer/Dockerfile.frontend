# Frontend Dockerfile for Next.js
FROM node:20-alpine

# Install additional tools for development
RUN apk add --no-cache \
    git \
    curl \
    bash \
    ca-certificates

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port 3000
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]
